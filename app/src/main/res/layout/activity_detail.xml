<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.stockhawk.ui.DetailActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        tools:text="Apple Inc"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        android:textColor="@color/colorPrimary"
        tools:text="appl"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tv_price_detail"
        style="@style/BidPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        tools:text="1000.00"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_symbol"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_change_detail"
        android:layout_marginRight="10dp"
        app:layout_constraintHorizontal_bias="0.901"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_change_detail"
        style="@style/PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/percent_change_pill_green"
        android:paddingEnd="2dp"
        tools:text="100%"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="24dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="368dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_symbol"
        app:layout_constraintHorizontal_bias="0.0"
        />

</android.support.constraint.ConstraintLayout>
